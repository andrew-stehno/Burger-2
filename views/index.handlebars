<div class="header">
    <img src="/images/cheeseburger.png" alt="hamburger">
    <h1>Eat-Dat-Burger!</h1>
</div>
<div class="container">
    <ul class="left">
            <h3>To Be Eaten</h3>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class="list">
                {{this.id}}. {{this.burger_name}}
                <button class="consume" data-id="{{this.id}}">
                    Devour it!
                </button>
            </li><br>
            {{/unless}}
            {{/each}}
        </ul>

    <ul class="right">
        <h3>The Departed!</h3>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
            <button class="gonzo" data-id="{{this.id}}">
                    Delete
                </button>
        </li><br>
        {{/if}}
        {{/each}}
    </ul>

    <div class="add">
        <h2>Add a Burger</h2>
        <form class="create-form">
            <div class="form-group">
                <textarea id="burg" rows="2" cols="40"></textarea>
            </div>
            <button type="submit">Add a Burger</button>
        </form>
    </div>
</div>